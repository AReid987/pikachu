<%= hidden_field_tag :direction, params[:direction] %>
<%= hidden_field_tag :sort, params[:sort] %>
<table class="table table-condensed">
	<thead>
		<tr>
			<th><%= sortable 'nickname' %></th>
			<th><%= sortable 'firstname' %></th>
			<th><%= sortable 'lastname' %></th>
			<th><%= sortable "email" %></th>
		</tr>
	</thead>
	<tbody>
	<% @admins.each do |admin|%>
		<%= content_tag_for :tr, admin do %>
			<tr>
			<td><%= admin.nickname %></td>
			<td><%= admin.firstname %></td>
			<td><%= admin.lastname %></td>
			<td><%= admin.email %></td>
			<% if can? :edit, admin %>
				<td>
				<%= link_to "Edit", edit_admin_path(admin), :class=>"btn, btn-primary" %>
				</td>
				<% end %>
			<% if can? :destroy, admin %>
				<td>
				<%= link_to "Destroy", admin, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn, btn-danger", :id =>"destroy_user" %>
				</td>
				<% end %>
			</tr>
		<% end %>
	<% end %>
	<tbody>
</table>
<%= paginate @admins %>
